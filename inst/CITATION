year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)  

citEntry(entry = "Article",
  title = "Accounting for errors in low coverage high-throughput sequencing data when constructing genetic maps using biparental outcrossed populations",
  year = "2018",
  author = c(person("Timothy P.", "Bilton"),
             person("Matthew R.", "Schofield"),
             person("Michael A.", "Black"),
             person("David", "Chagne"),
             person("Phillip L.", "Wilcox"),
             person("Ken G.","Dodds")),
  journal = "Genetics",
  volume = "209",
  number = "1",
  pages = "65--76",
  header = "To cite GUSMap in publications use:",
  textVersion= paste("Bilton, T.P, Scholfield, M.R, Black, M.A., Chagne, D., Wilcox, P.L, & Dodds, K.G.(2018). Accounting for errors in low coverage high-throughput sequencing data when constructing genetic maps using biparental outcrossed populations. Genetics, 209(1), 65-76."))

citEntry(entry = "Manual",
  title = "{GUSMap}: Genotyping Uncertainty with Sequencing data and linkage MAPping",
  author = c(person("Timothy P.", "Bilton")),
  year = year,
  note = note,
  url = "https://github.com/tpbilton/GUSMap",
  textVersion=paste0("Bilton, T.P. (",year,"). GUSMap: Genotyping Uncertainty with Sequencing data and linkage MAPping. R package version ",note,", URL:https://github.com/tpbilton/GUSMap"))
